extends ../../layouts/default 
include ../../mixins/box-head.pug
block main 
  .container.my-3
  .row
    .col-12
      +box-head("Danh sách sản phẩm")

  .row
    each item in products
      .col-4.mb-3
        .product-item
          a(href=`detail/${item.slug}` style= "text-decoration: none;") 
            .inner-image
              img(src= item.thumbnail, alt="iPhone 9")
            .inner-content
              h3.inner-title #{item.title}
              .inner-price-new #{item.newPrice}
              .inner-price-old #{item.price}
              .inner-discount -#{item.discountPercentage}
 
