mixin pagination(pagination)
  ul.pagination
    if(pagination.currentPage > 1)
      li.page-item
        button(class = 'page-link'  page-number= `${pagination.currentPage - 1}`) Trang trước
    - for(let i = 1 ; i <= pagination.totalPages ; i++)
        li(class= `page-item ${pagination.currentPage == i ? 'active' : ''}`)
          button(class = 'page-link'  page-number= i) #{i}
    if(pagination.currentPage < pagination.totalPages)
      li.page-item  
        button(class='page-link' page-number=(pagination.currentPage + 1)) Trang kế tiếp